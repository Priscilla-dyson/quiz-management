// Prisma schema for Quiz Management System

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  ADMIN
  STUDENT
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  name         String
  passwordHash String    // store hashed passwords
  role         Role      @default(STUDENT)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sessions     Session[]
  quizzes      Quiz[]    @relation("QuizCreator")
  attempts     Attempt[]
}

model Session {
  id        String   @id // random string stored in cookie
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Quiz {
  id              Int        @id @default(autoincrement())
  title           String
  description     String?
  passingCriteria Int
  createdBy       Int
  creator         User       @relation("QuizCreator", fields: [createdBy], references: [id])
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  questions       Question[]
  attempts        Attempt[]
}

model Question {
  id             Int          @id @default(autoincrement())
  quizId         Int
  quiz           Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  type           QuestionType
  text           String
  options        String       // JSON string array
  correctAnswers String       // JSON string array of numbers
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Attempt {
  id        Int      @id @default(autoincrement())
  quizId    Int
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  score     Int
  passed    Boolean
  answers   Json
  duration  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
